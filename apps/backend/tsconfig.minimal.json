{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "src/__mocks__/**",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/__tests__/**"
  ]
}
