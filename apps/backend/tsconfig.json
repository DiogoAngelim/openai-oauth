{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "types": ["jest", "node"],
    "target": "es2021",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "src/__mocks__/**",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/__tests__/**"
  ]
}
