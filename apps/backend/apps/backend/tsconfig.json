{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*"
      ],
      "@/*": [
        "*"
      ],
      "auth/*": [
        "auth/*"
      ],
      "openai/*": [
        "openai/*"
      ],
      "rate-limit/*": [
        "rate-limit/*"
      ],
      "api/*": [
        "api/*"
      ],
      "billing/*": [
        "billing/*"
      ],
      "compliance/*": [
        "compliance/*"
      ],
      "monitoring/*": [
        "monitoring/*"
      ],
      "logger/*": [
        "logger/*"
      ],
      "sentry/*": [
        "sentry/*"
      ]
    },
    "incremental": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}