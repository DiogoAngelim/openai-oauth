{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "esnext.disposable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "components",
    "types",
    "types/jest.d.ts",
    ".next/types/**/*.ts",
    "app/**/*.spec.tsx",
    "app/**/*.test.tsx",
    "app/__tests__/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
